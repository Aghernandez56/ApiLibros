@{
    ViewData["Title"] = "Insertar";
}

<h2>Insertar nuevo préstamo</h2>


<div class="align-content-center">
<form action="/InsertarPrestamo" method="post">
    <div class="form-group mb-3">
        <label for="UsuarioId">ID Usuario:</label>
            <input type="number" name="UsuarioId" class="form-control" placeholder="Ej: 1" required />
    </div>

    <div class="form-group mb-3">
        <label for="LibroId">ID Libro:</label>
            <input type="number" name="LibroId" class="form-control" placeholder="Ej: 1" required />
    </div>

        <div class="form-group mb-3">
            <label for="FechaPrestamo">Fecha de Prestamo:</label>
            <input type="date" id="FechaPrestamo" name="FechaPrestamo" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label for="FechaDevolucion"> Fecha de Devolución:</label>
            <input type="date" name="FechaDevolucion" class="form-control" placeholder="Ej: 26/05/2025" required />
        </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Insertar</button>
    </div>
</form>

