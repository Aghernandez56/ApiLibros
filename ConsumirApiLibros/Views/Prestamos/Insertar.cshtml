<script>
    document.addEventListener("DOMContentLoaded", function () {
        const today = new Date().toISOString().split('T')[0]; // Formato YYYY-MM-DD
        const fechaPrestamoInput = document.getElementById('FechaPrestamo');

        // Establecer la fecha de hoy en el campo
        fechaPrestamoInput.value = today;

        // Deshabilitar el campo para que no se pueda cambiar
        fechaPrestamoInput.disabled = true;
    });
</script>
